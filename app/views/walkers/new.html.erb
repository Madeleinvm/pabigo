<head>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Postulacion a ser un paseador</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
          <div class="row">
            <div class="col-lg-12">
              <%= simple_form_for :walker, :url => { :action => :create } do |f| %>
              <div class="form-group"> 
                <p>
                  <%= f.input :city,
                                        required: true,
                                        autofocus: true,
                                        hint: ("No puede estar vacio"),
                                        class: 'form-control'%>
                </p>
              </div>
              <div class="form-group"> 
                <p>
                  <%= f.label :descripcion %>
                  <%= f.cktext_area( :description,
                                        size: "4x10",
                                        required: true,
                                        class: 'form-control',
                                        placeholder: "Escribir aqui... (no puede estar vacio)" )%>
                </p>
              </div>
            </div>
          </div>
        </div>
  <div class="col-lg-12 col-md-12 col-xs-12">
    <div class="form-group">
      <div class="col-lg-12 col-md-12 col-xs-12">
        <%= f.fields_for :images_attributes do |images_fields| %>
          Image: <%= images_fields.file_field :image, :multiple => true,name: "images_attributes[image][]" %>
        <% end %>
        <%# f.attachment_field :images_files, multiple: true, presigned: true, direct: true %>
      </div>
    </div>
  </div>
  <div class="col-lg-12 col-md-12 col-xs-12">
    <div class="form-group">
      <div class="col-lg-12 col-md-12 col-xs-12">
        <%= f.fields_for :images_attributes do |images_fields| %>
          Image: <%= images_fields.file_field :image, :multiple => true,name: "images_attributes[image][]" %>
        <% end %>
        <%# f.attachment_field :images_files, multiple: true, presigned: true, direct: true %>
      </div>
    </div>
  </div>
  <div class="col-lg-12 col-md-12 col-xs-12">
    <div class="form-group">
      <div class="col-lg-12 col-md-12 col-xs-12">
        <%= f.fields_for :images_attributes do |images_fields| %>
          Image: <%= images_fields.file_field :image, :multiple => true,name: "images_attributes[image][]" %>
        <% end %>
        <%# f.attachment_field :images_files, multiple: true, presigned: true, direct: true %>
      </div>
    </div>
  </div>
    <div class="form-group col-md-6">
        <%= f.button :submit, "Guardar", class:"btn btn-primary" %>
    </div>
  <% end %>
  </div>