          </div>
          <%= f.label :descripcion %>
          <div class="form-group">
          <%= f.cktext_area :description %>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-lg-offset-2 col-lg-10">
            <%= f.submit 'Actualizar', :class => 'btn btn-info'%>
            <%= link_to 'Cancelar', url_for(:back), :class => 'btn btn-default' %>
          </div>
        </div>
        <% end %>
