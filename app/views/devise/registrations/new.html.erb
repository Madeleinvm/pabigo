<br><br><br>

<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h3 align="center" class="panel-title">¡Regístrese en PaBigo!</h3>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-xs-12">
              <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <div class="row">
                  <div class="col-xs-12">
                    <%= f.error_notification %>
                  </div>
                </div>

                <div class="row">
                  <div class="col-xs-6">
                    <fieldset>
                      <div class="form-group">
                        <%= f.input :email,
                                    label: "Correo",
                                    required: true,
                                    autofocus: true,
                                    input_html: { autocomplete: "email" } %>
                      </div>
                      <div class="form-group">
                        <%= f.input :password,
                                    label: "Contraseña",
                                    required: true,
                                    #hint: ("#{@minimum_password_length} caracteres mínimo" if @minimum_password_length),
                                    input_html: { autocomplete: "new-password" } %>
                      </div>
                      <div class="form-group">
                        <%= f.input :password_confirmation,
                                    label: "Confirmación de Contraseña",
                                    required: true,
                                    input_html: { autocomplete: "new-password" } %>
                      </div>
                    </fieldset>
                  </div>
                  <div class="col-xs-6">
                    <%= f.simple_fields_for :profile do |profile_form| %>
                      <%= profile_form.input :name,
                                             label: "Nombre",
                                             required: true %>
                      <%= profile_form.input :last_name,
                                             label: "Apellido",
                                             required: true %>
                      <%= profile_form.input :male,
                                             label: "Género",
                                             as: :select,
                                             collection: [["Masculino", true], ["Femenino", false]],
                                             required: true %>
                    <% end %>
                  </div>
                </div>

                <div class="row">
                  <div align="center" class="col-xs-12">
                    <%= recaptcha_tags %>
                  </div>
                </div>

                <br>

                <div class="row">
                  <div class="col-xs-6 col-xs-offset-3">
                    <!-- Change this to a button or input when using this as a form -->
                    <%= f.button :submit, "Registrarse", class: "btn btn-lg btn-success btn-block" %>
                  </div>
                  <div class="col-xs-3">
                    <%= render "devise/shared/links" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
