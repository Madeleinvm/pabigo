<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h3 align="center" class="panel-title">¿Olvidaste tu Contraseña?</h3>
        </div>
        <div class="panel-body">
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %>

            <%= f.input :reset_password_token, as: :hidden %>
            <%= f.full_error :reset_password_token %>

            <fieldset>
              <div class="form-group">
                <%= f.input :password,
                            label: "Nueva Contraseña",
                            required: true,
                            autofocus: true,
                            hint: ("#{@minimum_password_length} caracteres mínimo" if @minimum_password_length),
                            input_html: { autocomplete: "new-password" } %>
              </div>
              <div class="form-group">
                <%= f.input :password_confirmation, label: "Confirm your new password", required: true %>
              </div>
              <!-- Change this to a button or input when using this as a form -->
              <%= f.button :submit, "Cambiar mi Contraseña", class: "btn btn-lg btn-success btn-block" %>
            </fieldset>
          <% end %>

          <%#= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
