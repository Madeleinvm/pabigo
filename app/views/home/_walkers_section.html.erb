<walkers>
  <div id="walkers">
    <div class="container">
      <div class="text-center">
        <h3>Mejores Paseadores</h3>
      </div>
      <div class="row">
          <% @bestwalker = 0 %> 

          <% @walkers.each do |walker1| %>
            <% if (@prueba = walker1.calification) >= 0 &&  (@prueba = walker1.calification) >= @bestwalker %>
              <%@bestwalker = @prueba%>          
            <% end %> 
          <% end %>

        <% @walkers.each do |walker| %>
            <div class="col-lg-4 info_box_col">
              <div class="text-center">
                <% if (@a = walker.calification) == @bestwalker %>
                  <% unless walker.images.empty? %>   
                    <% unless walker.images.first == nil %>
                      <a href="<%= walker_path(walker) %>"><img   src="<%= walker.images.first.picture.url %>" alt="" class="img-circle" width="200" height="200"></a>
                    <% else %>
                      <a href="<%= walker_path(walker) %>"><img   src="/images/ImageDefault.jpg" alt="" class="img-circle" width="200" height="200"  ></a>
                    <% end %>
                  <%else %>
                    <a href="<%= walker_path(walker) %>"><img   src="/images/ImageDefault.jpg" alt="" class="img-circle" width="200" height="200"  ></a>
                  <% end %>

                  <% if walker.user.profile.name != nil %>
                    <h4><%= walker.user.profile.name %> <%= walker.user.profile.last_name %></h4>
                  <% else %>
                    <h4><%= walker.user.email %></h4>
                  <% end %>
                  <strong>Calificaci√≥n:</strong> 
                    <% (0..walker.calification.to_i-1).each do |i| %>
                      <img src="/images/dog-bone2.png" alt="">
                    <% end %>
                    <%= walker.calification %>
                <% end %>     
              </div>
            </div> 
        <% end %>
      </div>
    </div>
    <br>
    <br>
      <div class="text-center">
        <div class="row">
            <%= link_to "Ver todos los Paseadores", walkers_path, class: "tn btn-primary btn-lg" %> 
        </div>
      </div>
  </div>
  <br>
  <br>
</walkers>