<p id="notice"><%= notice %></p>

<h1>Tips</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tips = Tip.all %>
    <% @tips.each do |tip| %>
      <tr>
        <td><%= tip.name %></td>
        <td><%= tip.description %></td>
        <td><%= tip.tip_types_id %></td>
        <td><%= link_to 'Ver', tip %></td>
        <td><%= link_to 'Editar', edit_tip_path(tip) %></td>
        <td><%= link_to 'Eliminar', tip, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Agregar un Tip', new_tip_path %>
