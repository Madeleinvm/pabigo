<% provide :title, "Perfil" %>
<%= render "shared/admin/page_title" %>

<div class="row">
  <div class="col-xs-8">
    <div class="row">
      <div class="col-xs-5">
        <%= render 'profile_picture' if @privacy && @privacy.show_profile_picture? %>
      </div>
      <div class="col-xs-7">
        <%= render 'account_info' if @privacy && @privacy.show_email? %>
        <%= render 'personal_info' if @privacy && @privacy.show_full_name? %>
        <%= render 'contact_info' if @privacy && @privacy.show_phones? %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <%= render 'address_info' if @privacy && @privacy.show_address? %>
      </div>
    </div>
  </div>
  <div class="col-xs-4">
    <%= render 'roles' %>
  </div>
</div>
