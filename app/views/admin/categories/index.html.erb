<% provide(:title, "Todas las Categorias") %>
<%= render "shared/admin/page_title" %>

<div class="row">
  <div class="col-xs-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <i class="fa fa-list-ul fa-fw"></i> Categorias
        <div class="pull-right">
          <%= link_to "Crear Categoria", new_admin_category_path, class: "btn btn-default btn-xs" %>
        </div>
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="row">
          <div class="col-xs-12">
            <div class="table-responsive">
              <table class="table table-bordered table-hover table-striped">
                <thead>
                  <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Acciones</th>
                  </tr>
                </thead>
                <tbody>
                  <% undefined = "No definido" %>
                  <% @categories.each do |category| %>
                    <tr>
                      <td><%= category.name || undefined %></td>
                      <td><%= category.description || undefined %></td>
                      <td style="text-align: center;">
                        <div class="btn-group" role="group" aria-label="...">
                          <%= link_to (tag.i class: "fa fa-eye"), "#", class: "btn btn-xs btn-primary" %>
                          <%= link_to (tag.i class: "fa fa-pencil"), edit_admin_category_path(category), class: "btn btn-xs btn-warning" %>
                          <%= link_to (tag.i class: "fa fa-trash"), admin_category_path(category), method: :delete, data: { confirm: "¿Seguro que quiere eliminar esta categoria?"}, class: "btn btn-xs btn-danger" %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            <!-- /.table-responsive -->
          </div>
          <!-- /.col-xs-12 (nested) -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->

    <div>
      <%= will_paginate @users, previous_label: "Anterior", next_label: "Siguiente", renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>
