<% provide(:title, "Denuncia") %>
<%= render "shared/admin/page_title" %>

<table class="table table-bordered table-hover table-striped">
  <thead>
    <tr>
      <th>Nombre del Abusivo</th>
      <th>Institución Involucrada</th>
      <th>Lugar de los Hechos</th>
      <th>Estatus</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @complaint.abusive_name %></td>
      <td><%= @complaint.institution.name if @complaint.institution %></td>
      <td><%= @complaint.place %></td>
      <td>
        <% if @complaint.approved == true %>
          Aprobado
        <% elsif @complaint.approved == false %>
          Rechazado
        <% else %>
          En Proceso
        <% end %>
      </td>
    </tr>
  </tbody>
</table>

<h3>Información sobre la denuncia</h3>

<p><%= @complaint.description %></p>

<%= simple_form_for [:admin, @complaint] do |f| %>
  <div class="btn-group" role="group" style="float: right;">
    <%= f.submit "Publicar", class: "btn btn-xs btn-warning" %>
    <%= f.submit "Rechazar", class: "btn btn-xs btn-danger" %>
  </div>
<% end %>
