<% provide(:title, "Solicitudes de Usuarios") %>
<%= render "shared/admin/page_title" %>

<table class="table table-bordered table-hover table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Estado</th>
      <th style="text-align: center;">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @temporal_homes.each_with_index do |temporal_home, i| %>
      <tr>
        <td><%= temporal_home.user.profile.name %></td>
        <td><%= temporal_home.user.profile.last_name %></td>
        <td>
          <% if temporal_home.approved == true %>
            Aprobada
          <% elsif temporal_home.approved == false %>
            Rechazada
          <% else %>
            En proceso
          <% end %>
        </td>
        <td style="text-align: center;">
          <div class="btn-group" role="group" aria-label="...">
            <%= link_to (tag.i class: "fa fa-eye"), admin_request_notification_path(temporal_home), class: "btn btn-xs btn-primary" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>