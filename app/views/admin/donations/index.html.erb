<div id="blue">
<div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Solicitud de donaciones</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
               <div class="row">
          <div class="col-lg-12">
            <section class="panel">
            <header class="panel-heading">
               <div class="container-fluid">
                <div class="nav row" id="top_menu">
                    
                    <div class="col-md-4"><h4>Donaciones Solicitadas</h4></div>

                    <div class="col-md-6">
                        <%= form_tag(admin_donations_path, method: :get) do %>
                            <div class="col-lg-6">
                                <%= text_field_tag :don,'' ,class:"search form-control" %>
                            </div>
                            <div class="col-lg-3">
                                <%= submit_tag 'Buscar',class:'btn btn-info' %>
                            </div> 
                        <% end %>
                    </div>

                    <div class="col-md-2">
                        <a class="btn btn-info" href="<%= admin_donations_new_path %>"><i class="fa fa-plus-square" aria-hidden="true"></i></a>
                    </div>   
                </div>
                </div>
              </header>

                <table class="table table-striped table-advance table-hover">
                    <tbody>
                        <tr>
                            <th><i class="fa fa-photo orange"></i> Beneficiado</th>
                            <th><i class="fa fa-user orange"></i> Nombre</th>
                            <th><i class="fa fa-file-text orange "></i> Descripción</th>
                            <th><i class="fa fa-hand-o-up orange "></i> Opción</th>
                        </tr>
                        <% @donation.each do |donations| %>
                        <tr>
                            <td>
                                    <ul class="list-inline">
                                        <% if donations.benefited == 'Perro' %>
                                            <img  src="/images/perro1.png" width="150" height="110"  "></a>
                                        <% else %>
                                            <% if donations.benefited == 'Gato' %>
                                                <img  src="/images/gato1.png" width="150" height="110"  "></a> 
                                            <% else %>   
                                                <img  src="/images/perro_gato1.jpg" width="150" height="110"  "></a>                        
                                            <% end %>
                                        <% end %>
                                        
                                    </ul>
                            </td>
                            <td><%= donations.name %></td>
                            <td><%= donations.description %></td>
                            <td>
                                <div>
                                    <a class="btn btn-warning" href="<%= admin_donationsashow_path(donations) %>"><i class="fa fa-search" aria-hidden="true"></i></a>
                                    <a href="<%= admin_donationedit_path(donations)%>"><button class="btn btn-success"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></button></a> 
                                    <%= link_to '', admin_donationdeletes_path(donations), method: :delete, class:"fa fa-trash-o btn btn-danger", data: { confirm: "¿Esta seguro que desea eliminar la donación?"}  %> 
                                </div>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>      
              
            </section>
          </div>
        </div>
    </div>
</div>