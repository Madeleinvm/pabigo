
<!-- Page Content -->

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Nueva Noticia</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-12">
                    <%= simple_form_for [:admin, @new], url: admin_news_index_path([:admin, @new]) do |f| %>
                            <div class="form-group">
                                <%= f.input :title,
                                    label: "Titulo",
                                    required: true,
                                    autofocus: true,
                                    hint: ("2 caracteres mÃ­nimo y 40 lo maximo" if 2) %>
                            </div>
                            <div class="form-group">
                                <label>Contenido 1</label>
                                <%= f.cktext_area( :content1,
                                                size: "4x10",
                                                required: true,
                                                class: 'form-control',
                                                placeholder: "Escribir aqui... (no puede estar vacio)" )%>
                            </div>
                            <div class="form-group">
                                <label>Contenido 2</label>
                                <%= f.cktext_area(:content2,
                                                size: "4x10",
                                                required: true,
                                                class: 'form-control') %>
                            </div>
                            <div class="form row">
                                <div class="form-group col-md-12">
                                    <%= f.simple_fields_for :image do |image_form| %>

                                        <%= image_form.input :picture,
                                                             required: true,
                                                                label: "Foto de la Noticia" %>

                                        <%= image_form.input :name, required: true, label: "Nombre de la Foto" %>
                                    <% end %>

                                </div>
                                <div class="form-group col-md-6">
                                    <%= f.button :submit, "Aceptar", class:"btn btn-primary" %>
                                    <%= button_tag t('buttons.cancel'), type: "submit", name: "cancel", class:"btn btn-default", value: true %>
                                </div>
                            </div>
                        <% end %>

                    </div>

                        <!-- /.col-lg-6 (nested) -->
                    <!-- /.row (nested) -->
            </div>
                <!-- /.panel-body -->
            <!-- /.panel -->
        </div>
    <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>

<!-- /#page-wrapper -->
