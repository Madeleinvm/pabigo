
<%= simple_form_for(@adoption) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :adoption_date, :readonly => true %>
  </div>

  <div class= "form-inputs">
  <p><label for = "pet_name">Nombre o Apodo</label>:
  <%= text_field 'Nombre', 'title' %></p>
  <p><label for = "pet_name">Raza</label>:
  <%= collection_select(:race, :pet_id, @races, :id, :name, prompt:'Seleccione una raza') %></p>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Crear Registro"%>
  </div>
<% end %>
