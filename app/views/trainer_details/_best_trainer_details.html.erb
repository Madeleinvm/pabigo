            </tr>
          </thead>
          <tbody>
            <tbody>

              <% @trainer_details.each do |trainer| %>
                <tr>
                  <% @usuario = User.find(trainer.user_id) %>
                  <% @perfil = Profile.find(@usuario.id) %>
                  <% if (@a = trainer.qualification) == @besttrainer %>
                    <td style="color:#000000 "><%= @perfil.name %></td>
                    <td style="color:#000000 "><%= @perfil.last_name %></td>
                    <td style="color:#000000 "><%= trainer.description %></td>
                    <td style="color:#000000 "><%= trainer.status %></td>
                    <td style="color:#000000 "><%= link_to "Ver Entrenador", trainer, :class => 'btn btn-info' %></td>
