<div id="fobackg">
    <div class="container">
    <div class="row justify-content-center">
      <div class="followbox col-sm-10">
        <%= simple_form_for :follow_up, :url => { :action => :create } do |f| %>
            <img src ="/images/paw.png" class="huella">
            <h3 class="text-center white" >¿Cómo se encuentra tu mascota?</h3>
            <h4 class="naranja1 text-justify">Descripción: </h4>          
            <%= f.text_area :description, label: "Descripción", class: 'area' %>
            <h4 class="naranja1 ">Fotos: </h4>
                  <%= f.fields_for :images_attributes do |images_fields| %>
                      <%= images_fields.file_field :image, :multiple => true,name: "images_attributes[image][]" %>
                  <% end %> 
                <%= f.submit 'Salvar', :class => 'btn btn-success btn-block space' %>
                <button class="btn btn-default btn-block" type="button">Cancelar</button>
             
        <% end %>  
      </div>
      </div>
    </div>
</div>

